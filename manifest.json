{
    "manifest_version": 3,
    "name": "AI summary",
    "version": "1.0",

    "permissions": ["scripting", "activeTab", "storage"],

    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],

    "background": {
        "service": "background.js"
    },

    "options_page": "options.html",

    "host_permissions": ["<all_urls>"]
}
